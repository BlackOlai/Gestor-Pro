# ====================================
# Frontend Environment Variables (Vite)
# ====================================
VITE_API_URL=/api  # Usar /api para produção ou http://localhost:3001 para desenvolvimento
VITE_FRONTEND_URL=http://localhost:5173
VITE_GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions

# Firebase Web App (Google Auth)
# Crie um app Web no Firebase Console e copie os valores abaixo
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_APP_ID=

# ====================================
# Backend Environment Variables (Node.js)
# ====================================
PORT=3001
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE=

# Groq API Configuration
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-8b-instant
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions

# CORS Configuration
# Adicione todas as origens permitidas separadas por vírgula
CORS_ORIGINS=http://localhost:5173,https://gestor-pro-rovians-projects.vercel.app,https://gestor-pro-seven.vercel.app

# ====================================
# Vercel Deployment Configuration
# ====================================
# Essas variáveis devem ser configuradas no painel do Vercel
# VERCEL_URL=seu-projeto.vercel.app
# VERCEL_GIT_REPO_OWNER=seu-usuario
